{
  "name": "Default Futuristic",
  "description": "A futuristic tech store theme with neon accents and glass effects",
  "version": "1.0.0",
  "author": "TechTrek Team",
  "colors": {
    "primary": {
      "hue": 193,
      "saturation": 100,
      "lightness": 50
    },
    "accent": {
      "hue": 271,
      "saturation": 100,
      "lightness": 65
    },
    "background": {
      "hue": 240,
      "saturation": 5,
      "lightness": 6
    }
  },
  "gradients": {
    "primary": "linear-gradient(135deg, hsl(193 100% 50%), hsl(271 100% 65%))",
    "hero": "linear-gradient(135deg, hsl(240 5% 6%), hsl(193 100% 50%), hsl(271 100% 65%))",
    "card": "linear-gradient(145deg, hsl(240 4% 9%), hsl(240 4% 12%))",
    "neon": "linear-gradient(90deg, hsl(193 100% 50%), hsl(271 100% 65%), hsl(310 100% 60%))",
    "glass": "linear-gradient(135deg, hsl(0 0% 100% / 0.1), hsl(0 0% 100% / 0.05))"
  },
  "shadows": {
    "card": "0 8px 32px hsl(193 100% 50% / 0.15)",
    "cardHover": "0 16px 48px hsl(193 100% 50% / 0.25)",
    "elegant": "0 20px 60px hsl(193 100% 50% / 0.3)",
    "neon": "0 0 20px hsl(193 100% 50% / 0.5)",
    "glow": "0 0 40px hsl(271 100% 65% / 0.4)",
    "glass": "inset 0 1px 0 hsl(0 0% 100% / 0.1)"
  },
  "animations": {
    "smooth": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
    "bounce": "all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275)"
  },
  "typography": {
    "fontFamily": {
      "sans": ["Inter", "system-ui", "sans-serif"],
      "mono": ["JetBrains Mono", "monospace"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem",
      "7xl": "4.5rem"
    }
  },
  "spacing": {
    "container": "2rem",
    "section": "4rem",
    "component": "1rem"
  },
  "borderRadius": {
    "sm": "calc(var(--radius) - 4px)",
    "md": "calc(var(--radius) - 2px)",
    "lg": "var(--radius)",
    "xl": "calc(var(--radius) + 4px)"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1400px"
  }
}
